{
  "name": "OpenSprinkler",
  "description": "Designed to allow intuitive control of the OpenSprinkler irrigation controller.",
  "version": "2.2.1",
  "manifest_version": 2,
  "app": {
	  "background": {
	      "scripts": ["chrome.js"]
    	}
  },
  "permissions": [
    "storage",
    "system.network",
    "geolocation",
    "<all_urls>"
  ],
  "icons": { "16": "res/chrome/icons/icon-16.png", "128": "res/chrome/icons/icon-128.png" },
  "sandbox": {
    "pages": [ "map.html" ]
  }
}
